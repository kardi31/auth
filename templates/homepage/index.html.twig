{% extends 'base.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block body %}
	<div class="mb-3">
		{% if app.user %}
		You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
		{% else %}
			<a href="{{ path('app_login') }}">Login</a>
			<a href="{{ path('app_register') }}">Register</a>
		{% endif %}
	</div>
{% endblock %}
